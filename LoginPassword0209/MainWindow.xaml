                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="Source/minus_icon_151193.ico"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver,
                                    ElementName=MinButtom}" Value="True">
